<%= form_for :writing, url: writing_index_path do |f| %>  
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  
  <p>
    <%= f.label :published_at %><br>
    <%= f.datetime_select :published_at %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>